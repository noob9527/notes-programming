{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata": true,
        "noImplicitAny":true,
        "noImplicitThis":true,
        "suppressImplicitAnyIndexErrors":true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "tests/**/*"
    ]
}
