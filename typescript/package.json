{
  "name": "typescript",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn test",
    "test": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.10",
    "tslint": "^5.7.0",
    "typescript": "^2.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "test/**/*.{ts}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}